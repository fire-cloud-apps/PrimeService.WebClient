@page "/Action"
@using FC.PrimeService.Shopping.Client.Component
@using FC.PrimeService.Shopping.Inventory.Component

<MudBreadcrumbs Items="_items"></MudBreadcrumbs>

@switch (_component)
{
    case "Client":
        <ClientComponent Id="@_id" />
        break;
    case "Product":
        <ProductComponent Id="@_id" />
        break;
    default:
        _navigationManager.NavigateTo("/");
        break;
}